<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PomodoroApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/apple_theme_red</item>
        <item name="colorPrimaryVariant">@color/apple_theme_mid_blue</item>
        <item name="colorOnPrimary">@color/apple_theme_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/apple_theme_mid_green</item>
        <item name="colorSecondaryVariant">@color/apple_theme_dark_green</item>
        <item name="colorOnSecondary">@color/apple_theme_really_dark_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/vt323</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/apple_theme_really_dark_green</item>


    </style>

</resources>