<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:scrollbars="none"
    android:id="@+id/scrollView"
    android:background="@color/apple_theme_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/layout_margin"
        >

        <TextView
            android:id="@+id/text_view_today_s_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/today_s_task"
            android:textSize="@dimen/title_text_size"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginHorizontal="@dimen/medium_margin"
            style="@style/MyTextAppearanceHeading1"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontal_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginHorizontal="@dimen/medium_margin"
            >
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tasks"
            android:textSize="@dimen/title_text_size"
            android:fontFamily="@font/press_start_2p"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginHorizontal="@dimen/medium_margin"
            android:textColor="@color/apple_theme_dark_green"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tasks_mini"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginHorizontal="@dimen/medium_margin"
            >
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/see_all_tasks_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/see_all_tasks"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/small_margin"/>

        <TextView
            android:id="@+id/completed_tasks_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/completed_tasks"
            android:textSize="@dimen/title_text_size"
            android:fontFamily="@font/press_start_2p"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginHorizontal="@dimen/medium_margin"
            android:textColor="@color/apple_theme_dark_green"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/completed_tasks_mini"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:textSize="25sp"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginHorizontal="@dimen/medium_margin"
            >

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/see_all_completed_tasks_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/see_all_completed_tasks"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginHorizontal="@dimen/medium_margin"
            android:layout_marginBottom="100dp"/>

    </LinearLayout>



</ScrollView>