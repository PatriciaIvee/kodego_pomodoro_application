<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PomodoroApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/apple_theme_red</item>
        <item name="colorPrimaryVariant">@color/apple_theme_mid_blue</item>
        <item name="colorOnPrimary">@color/apple_theme_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/apple_theme_mid_green</item>
        <item name="colorSecondaryVariant">@color/apple_theme_dark_green</item>
        <item name="colorOnSecondary">@color/apple_theme_really_dark_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/vt323</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/apple_theme_really_dark_green</item>
<!--        <item name="android:toolbarStyle">@style/ToolbarStyle</item>-->

    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/apple_theme_red</item>
        <item name="colorPrimaryVariant">@color/apple_theme_mid_blue</item>
        <item name="colorOnPrimary">@color/apple_theme_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/apple_theme_mid_green</item>
        <item name="colorSecondaryVariant">@color/apple_theme_dark_green</item>
        <item name="colorOnSecondary">@color/apple_theme_really_dark_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        CHANGE PREFERENCE CATEGORY COLOR-->
        <item name="colorAccent">@color/apple_theme_mid_green</item>
<!--        CHANGE SUMMARY COLOR-->
        <item name="android:textColorSecondary">@color/apple_theme_cadet_blue</item>

        <item name="android:fontFamily">@font/vt323</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/apple_theme_mid_blue</item>


    </style>

