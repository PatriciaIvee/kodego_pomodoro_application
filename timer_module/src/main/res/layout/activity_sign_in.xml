<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:background="@drawable/green_gradient_background">

    <TextView
        android:id="@+id/text_pomordoro_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/image"
        android:text="@string/pomme"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/apple_theme_red"
        android:fontFamily="@font/press_start_2p"
        android:layout_marginTop="100dp"/>


    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_pomordoro_app"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_sign_in"
        android:src="@drawable/pomme_logo_124"
        android:contentDescription="@string/pomme_image"
        android:layout_marginTop="@dimen/large_margin"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign_in"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:text="Sign In"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginTop="@dimen/large_margin"
        android:textColor="@drawable/button_sign_in_layout"
        android:background="@drawable/button_sign_in_layout"
        />

</androidx.constraintlayout.widget.ConstraintLayout>